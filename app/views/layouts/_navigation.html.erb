<% @team ||= TeamManager::Team.last %>
<% @image_height ||= 60 %>

<nav class="site-header barium py-1">
  <div class="float-left p-2">
    <%= link_to main_app.root_path do %>
      <%= image_tag 'barium_logo_transparent_bg', height: @image_height %>
    <% end %>
  </div>
  <div class="float-right">
    <div class="col-12 font-script d-none d-md-inline-block font-right" style="height: <%= (@image_height - 15) %>px;">
      <span class="float-right font-script barium-by-deforge-script">Barium by Anna DeForge</span>
    </div>
    <div class="col-12 pt-2 text-right">
      <%= link_to 'Team', team_manager.team_path(@team), class:'px-2 d-none d-md-inline-block' %>
      <% if user_signed_in? %>
        <%= link_to 'Log Out', team_manager.destroy_user_session_path, method: :delete, class:'px-2 d-none d-md-inline-block' %>
      <% else %>
        <%= link_to 'Sign In', team_manager.new_user_session_path, class:'px-2 d-none d-md-inline-block' %>
      <% end %>
    </div>
  </div>
  <div class="clearfix"></div>
</nav>
